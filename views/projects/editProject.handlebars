

<div class="card card-body">
	<h3> Edit Project </h3>
	<form action="/Projects/{{Project.id}}?_method=PUT" method="post">
		<div class="form-group">
			<input type="hidden" name="_method" value="PUT">
			<label for="title"> Title </label>
			<input type="text" class="form-control" name="title" value="{{Project.Title}}" required>

			<label for="title"> Description </label>
			<textarea class="form-control" name="Description">{{Project.Description}}</textarea>


			<label for="Github link"> Github link </label>
			<input type="text" class="form-control" name="github" value="{{Project.gitRepoLink}}" required>

			<label for="Date"> Date </label>
			<input type="date" class="form-control" name="date" value="{{Project.dateformatted}}" required>
		</div>
		<button type="submit" class="btn btn-primary"> Edit </button>
		
	</form>
		<form action="/Projects/{{Project.id}}?_method=DELETE" method="post">
			<input type="hidden" name="_method" value="DELETE">
			<input type="submit" class="btn btn-danger"value="DELETE DIS" style="margin-top:15px">
		</form>

</div>