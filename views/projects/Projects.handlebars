	{{#each Projects}}
	<div class="card card-body" style="z-index:1; width:80vw;{{#if active}}{{else}} background:#ddd {{/if}}  ">
	<a href="/projects/details/{{id}}">
		<h4> {{Title}}</h4>
		{{#if active}}{{else}} <btn class="btn-danger" style="color:white"> This project is hidden to users </btn> {{/if}}
		<p>{{Description}} </p>
		<p>{{#if pdfLink}}More info: {{../Host}}{{pdfLink}} {{else}} No Documentation. {{/if}} </p>
		<p href="{{gitRepoLink}}"> Github: {{gitRepoLink}} </p>
		<table style="width:100%">
			<tr>
				<td><p> Starting: {{timeago}}</p></td>
				<td><p style="text-align:right;"> {{time}} </p></td>
			</tr>
		</table>
	</a>
		{{#if ../user.admin}}
			<a class="btn btn-dark btn-block" href="/projects/edit/{{_id}}" style="z-index:3;"> Edit </a>
		{{/if}}
	</div>
	{{else}}
			<p> Something went wrong.</p>
	{{/each}}
	<a href="/projects/new" class="btn btn-primary btn-block" style="width:80vw"> Add New Project</a>
